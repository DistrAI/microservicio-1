# Variables de entorno para desarrollo local - DistrIA GestorAPI

# Configuración de base de datos (debe coincidir con docker-compose.yml)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/distriadb
SPRING_DATASOURCE_USERNAME=distriauser
SPRING_DATASOURCE_PASSWORD=distriapass123

# Configuración JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Configuración GraphQL
SPRING_GRAPHQL_GRAPHIQL_ENABLED=true
SPRING_GRAPHQL_GRAPHIQL_PATH=/graphiql

# Configuración JWT
JWT_SECRET=distrIA-development-secret-key-2024
JWT_EXPIRATION=86400000

# Configuración de logging
LOGGING_LEVEL_COM_SW2=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# Configuración de Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
