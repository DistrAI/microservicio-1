# ===================================================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN - DistrIA GestorAPI
# ===================================================================
# Copia este archivo como .env.prod y configura los valores reales

# Información de la aplicación
APP_VERSION=1.0.0
APP_PORT=8080
MANAGEMENT_PORT=8081

# Configuración de base de datos PostgreSQL
POSTGRES_DB=distriadb_prod
POSTGRES_USER=distriauser
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
POSTGRES_PORT=5432

# Configuración de Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_PORT=6379

# Configuración de seguridad JWT
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_789_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=3600000

# Configuración de CORS
CORS_ALLOWED_ORIGINS=https://distraia.com,https://dashboard.distraia.com,https://app.distraia.com

# Configuración SSL/TLS (opcional)
SSL_ENABLED=false
SSL_KEY_STORE=/path/to/keystore.p12
SSL_KEY_STORE_PASSWORD=KEYSTORE_PASSWORD
SSL_KEY_STORE_TYPE=PKCS12

# Configuración de Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Configuración de Prometheus
PROMETHEUS_PORT=9090

# Rutas de datos y logs
DATA_PATH=/opt/distraia/data
LOGS_PATH=/opt/distraia/logs

# Configuración de base de datos avanzada
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=5
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1200000
HIKARI_CONNECTION_TIMEOUT=20000

# Configuración de logging
LOGGING_FILE_NAME=/opt/distraia/logs/gestorapi.log
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=30

# Configuración de monitoreo
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Variables específicas del entorno
ENVIRONMENT=production
COMPANY_NAME=DistrIA
SUPPORT_EMAIL=support@distraia.com

# Configuración de backup (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=distraia-backups
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
